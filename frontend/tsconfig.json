{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "tsBuildInfoFile": ".tsbuildinfo"
    },
    "include": [
        "src",
        "tests"
    ]
}